            <div class="infoBox">
                <div class="infoBox--headers">
                    <h3 class="vehicle_name"><%= listings[i].name %></h3>
                    <h3 class="vehicle_price"><%= listings[i].price %> kr</h3>
                </div>

                <span class="seperator"></span>

                <table class="infoBox--information">
                    <tr>
                        <td>Kilometer: <%= listings[i].kilometers %></td>
                        <td>Drivmiddel: Benzin</td>
                    </tr>

                    <tr>
